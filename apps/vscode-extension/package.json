{
    "name": "@regex-radar/vscode-extension",
    "private": true,
    "displayName": "Regex Radar",
    "publisher": "Kevin Ramharak",
    "description": "The Regex Radar extension for vscode",
    "version": "0.1.0",
    "type": "module",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/kevinramharak/regex-radar",
        "directory": "apps/vscode-extension"
    },
    "homepage": "https://github.com/kevinramharak/regex-radar",
    "regex-radar.trace.server": {
        "default": "verbose"
    },
    "engines": {
        "vscode": "^1.105.0"
    },
    "vsce": {
        "dependencies": false
    },
    "categories": [],
    "activationEvents": [],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "regex-radar__regex-explorer",
                    "title": "Regex Explorer",
                    "icon": "$(regex)"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Regex Radar",
            "properties": {
                "@regex-radar/client.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server.",
                    "ignoreSync": true
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "regex-radar.explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "collapsed"
                }
            ],
            "regex-radar__regex-explorer": [
                {
                    "id": "regex-radar.regex-explorer.tree-view",
                    "name": "Regex Explorer",
                    "icon": "regex",
                    "visibility": "visible"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "regex-radar.tree-data-provider.refresh",
                    "when": "view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "regex-radar.tree-data-provider.openInRegExr",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                },
                {
                    "command": "regex-radar.tree-data-provider.openInRegex101",
                    "when": "(view == regex-radar.regex-explorer.tree-view || view == regex-radar.explorer.tree-view) && viewItem == regex"
                }
            ]
        },
        "commands": [
            {
                "command": "regex-radar.tree-data-provider.refresh",
                "enablement": "view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible",
                "icon": "$(refresh)",
                "title": "Refresh"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegExr",
                "enablement": "view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible",
                "icon": "$(globe)",
                "title": "Open in RegexR"
            },
            {
                "command": "regex-radar.tree-data-provider.openInRegex101",
                "enablement": "view.regex-radar.regex-explorer.tree-view.visible || view.regex-radar.explorer.tree-view.visible",
                "icon": "$(globe)",
                "title": "Open in Regex101"
            }
        ]
    },
    "main": "./dist/extension.cjs",
    "browser": "./dist/extension.browser.cjs",
    "types": "./dist/extension.d.ts",
    "files": [
        "dist/**/*",
        "assets/**/*",
        "LICENSE"
    ],
    "scripts": {
        "build": "node scripts/build.js",
        "dev": "node scripts/build.js --watch",
        "package": "node scripts/build.js --production",
        "tsc": "tsc -p .",
        "clean": "rm -r dist/"
    },
    "devDependencies": {
        "@types/node": "^22.18.10",
        "@types/vscode": "^1.105.0",
        "esbuild": "^0.25.11"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1",
        "@regex-radar/client": "*"
    }
}