{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 110,
  "tabWidth": 4,
  "useTabs": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "singleQuote": true,
  "semi": true,
  "overrides": [
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2
      }
    }
  ],
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^node:",
    "<BUILTIN_MODULES>",
    "<SEPERATOR>",
    "^vscode",
    "^@gitlab/needle$",
    "<SEPERATOR>",
    "<THIRD_PARTY_MODULES>",
    "<SEPERATOR>",
    "^@regex-radar/",
    "<SEPERATOR>",
    "^[.]{2}/",
    "<SEPERATOR>",
    "^[.]/"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": false,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderParserPlugins": [
    "typescript",
    "decorators"
  ]
}