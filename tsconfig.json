{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/recommended/tsconfig.json",
    "files": [],
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "declarationMap": true,
        "noEmitOnError": true,
        "target": "es2024",
        "module": "esnext",
        "moduleResolution": "bundler",
        "paths": {
            "@regex-radar/client": ["./packages/client/src"],
            "@regex-radar/server": ["./packages/server/src"],
            "@regex-radar/protocol": ["./packages/protocol/src"],
            "@regex-radar/tree-sitter": ["./packages/tree-sitter/src"]
        }
    },
    "references": [
        { "path": "apps/vscode-extension" },
        {
            "path": "packages/server"
        },
        {
            "path": "packages/client"
        },
        {
            "path": "packages/protocol"
        },
        {
            "path": "packages/tree-sitter"
        }
    ]
}
